<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
    
	<system.serviceModel>
		<services>
			<!-- Redovan server -->
			<service name="Server.StudentskaSluzbaServer">
				<host>
					<baseAddresses>
						<!-- net.tcp ne zaboravi -->
						<add baseAddress="net.tcp://localhost:8001" />
					</baseAddresses>
				</host>
				<endpoint address="SSluzba"
                          binding="netTcpBinding"
                          contract="Common.IStudentskaSluzba" />
				<endpoint address="SSluzbaBezbednost"
                          binding="netTcpBinding"
                          contract="Common.IBezbednosniMehanizmi" />
			</service>

			<!-- Replikator server -->
			<service name="Server.Replikator">
				<host>
					<baseAddresses>
						<!-- Možeš dva puta isti BaseAddress da koristiš -->
						<add baseAddress="net.tcp://localhost:8001"/>
					</baseAddresses>
				</host>
				<endpoint address="Replikacija"
						  binding="netTcpBinding"
						  contract="Common.IReplikator" />
			</service>
		</services>
    </system.serviceModel>
</configuration>